#include <stdio.h>

int main() {
    int n, i;
    int marks[10];
    int highest, lowest;
    float sum = 0, average;
    int passCount = 0, failCount = 0;
    int aPlus = 0, a = 0, b = 0, c = 0, d = 0, fail = 0;

    printf(" Student Performance Analyzer \n");
    printf("Enter total number of students (max 10): ");
    scanf("%d", &n);

    if(n > 10 || n <= 0) {
        printf("Invalid number of students!\n");
        return 0;
    }

    // Input marks
    for(i = 0; i < n; i++) {
        printf("Enter marks for student %d: ", i + 1);
        scanf("%d", &marks[i]);

        // Validate marks
        if(marks[i] < 0 || marks[i] > 100) {
            printf("Invalid marks! Please enter between 0-100.\n");
            return 0;
        }

        sum += marks[i];
    }

    highest = marks[0];
    lowest = marks[0];

    // Calculate highest, lowest, and grade distribution
    for(i = 0; i < n; i++) {
        if(marks[i] > highest)
            highest = marks[i];
        if(marks[i] < lowest)
            lowest = marks[i];

        if(marks[i] >= 90)
            aPlus++;
        else if(marks[i] >= 80)
            a++;
        else if(marks[i] >= 70)
            b++;
        else if(marks[i] >= 60)
            c++;
        else if(marks[i] >= 50)
            d++;
        else
            fail++;
    }

    passCount = n - fail;
    failCount = fail;
    average = sum / n;

    // Output
    printf("\n Result Summary \n");
    printf("Average Marks: %.2f\n", average);
    printf("Highest Marks: %d\n", highest);
    printf("Lowest Marks: %d\n", lowest);
    printf("\nTotal Passed Students: %d\n", passCount);
    printf("Total Failed Students: %d\n", failCount);

    printf("\nGrade Distribution:\n");
    printf("A+ : %d\n", aPlus);
    printf("A  : %d\n", a);
    printf("B  : %d\n", b);
    printf("C  : %d\n", c);
    printf("D  : %d\n", d);
    printf("Fail : %d\n", fail);

    printf("\n");

    return 0;
}

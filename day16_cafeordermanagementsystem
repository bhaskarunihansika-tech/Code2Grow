#include <stdio.h>

int main() {
    int item_no[5] = {1, 2, 3, 4, 5};
    char item_name[5][20] = {"Coffee", "Tea", "Sandwich", "Burger", "Pastry"};
    int item_price[5] = {50, 30, 80, 120, 60};
    int item_count[5] = {0, 0, 0, 0, 0}; // to track total quantity sold per item

    int num_customers;
    int i, j, k;

    printf(" Café Order Management System \n");
    printf("Enter total number of customers (max 10): ");
    scanf("%d", &num_customers);

    if (num_customers > 10) {
        printf("Maximum 10 customers allowed!\n");
        return 0;
    }

    int total_revenue = 0;

    for (i = 1; i <= num_customers; i++) {
        int num_items, total_bill = 0;
        printf("\n--- Customer %d ---\n", i);
        printf("Enter number of items: ");
        scanf("%d", &num_items);

        for (j = 1; j <= num_items; j++) {
            int item_no_input, quantity;
            printf("Enter item number and quantity: ");
            scanf("%d %d", &item_no_input, &quantity);

            if (item_no_input >= 1 && item_no_input <= 5) {
                total_bill += item_price[item_no_input - 1] * quantity;
                item_count[item_no_input - 1] += quantity;
            } else {
                printf("Invalid item number!\n");
            }
        }

        printf("Total Bill for Customer %d: ₹%d\n", i, total_bill);
        total_revenue += total_bill;
    }

    // Display Café Summary
    printf("\n Café Summary \n");
    printf("Total Revenue of the Day: ₹%d\n", total_revenue);

    int total_items_sold = 0;
    for (i = 0; i < 5; i++) {
        total_items_sold += item_count[i];
    }
    printf("Total Items Sold: %d\n", total_items_sold);

    // Find most ordered and least ordered items
    int most_ordered = 0, least_ordered = 0;
    for (i = 1; i < 5; i++) {
        if (item_count[i] > item_count[most_ordered])
            most_ordered = i;
        if (item_count[i] < item_count[least_ordered])
            least_ordered = i;
    }

    printf("Most Ordered Item: %s (%d)\n", item_name[most_ordered], item_count[most_ordered]);
    printf("Least Ordered Item: %s (%d)\n", item_name[least_ordered], item_count[least_ordered]);

    return 0;
}
